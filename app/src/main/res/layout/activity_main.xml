<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#462255">

    <Button
        android:id="@+id/crunchesButton"
        android:layout_width="255dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:text="Brzuszki"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:backgroundTint="#6A7FDB"
        app:layout_constraintBottom_toTopOf="@+id/targetButtonM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/databaseButton"
        android:layout_width="255dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:text="Rekordy"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:backgroundTint="#6A7FDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetButtonM" />

    <Button
        android:id="@+id/targetButtonM"
        android:layout_width="255dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:text="cel"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:backgroundTint="#6A7FDB"
        app:layout_constraintBottom_toTopOf="@+id/databaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crunchesButton" />

  </androidx.constraintlayout.widget.ConstraintLayout>